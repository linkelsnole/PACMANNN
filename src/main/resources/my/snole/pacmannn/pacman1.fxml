            <Text fill="WHITE" layoutX="27.0" layoutY="324.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Level: " wrappingWidth="50.8037109375">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Text fill="WHITE" layoutX="12.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Time: " wrappingWidth="47.845703125">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
