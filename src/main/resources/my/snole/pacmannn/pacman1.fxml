                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="nextLevelButton" layoutX="13.0" layoutY="348.0" mnemonicParsing="false" onAction="#handleNextLevelButtonAction" prefHeight="28.0" prefWidth="177.0" style="-fx-background-color: #3498DB;" text="Next Level -&gt;" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Separator layoutX="12.0" layoutY="285.0" prefHeight="5.0" prefWidth="179.0" />
            <Text fill="WHITE" layoutX="25.0" layoutY="163.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Ghosts">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <RadioButton fx:id="radio2Ghosts" layoutX="27.0" layoutY="198.0" mnemonicParsing="false" text="2" textFill="WHITE" />
            <Button fx:id="addGhostButton" layoutX="92.0" layoutY="140.0" mnemonicParsing="false" onAction="#handleAddGhostButton" prefHeight="32.0" prefWidth="102.0" text="Add Ghost">
